<div class="post-container mb-3 px-2 ">
    <div class="row mb-4 post-header pt-2 pb-2 ps-2 light-color">
        <div class="col-md-5 me-5">
            <h2>
                <a class="light-color" href="/project/{{post.id}}">{{post.title}}</a>
            </h2>
        </div>
        <div class="col-md-5  ms-5 my-auto">
            <p class="my-auto">Created by {{post.user.name}} on {{format_date post.date_created}}</p>
        </div>
    </div>
    <div class="row mb-4 ">
        <div class="col-md-7">
            <p>
                {{post.content}}
            </p>
        </div>
    </div>
</div>

<div class="post-container px-2">
    <div class="row mb-4 dark-bg pt-2 pb-2 ps-2 light-color">
        <div class="col-md-5 me-5">
            <h3 class=" fs-3">Comments</h3>
        </div>
    </div>
    <div class="row mb-4  pt-2 pb-2 ps-2 ">
        <div class="col-md-5 col-6 mx-auto">
            <form class="new-comment-form col mx-auto">
                <div class="mb-3">
                    <input type="text" class="form-control" id="comment" placeholder="Add New Comment...">
                </div>
                <div class="text-center  ">
                    <button type="submit" class="btn btn-primary  fs-5">Post</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row mb-4  pt-2 pb-2 ps-2 ">
        <div class="col-md-5 col-6 mx-auto">
            {{#each comment}}
            <div class="bg-light p-2 m-2 col mx-auto">
                <p>"{{ccontent}}"</p>
                <p class="fst-italic">-{{user.name}} {{format_date date_created}}</p>
            </div>

            {{/each}}
        </div>
    </div>

</div>




<script src="/js/comment.js"></script>